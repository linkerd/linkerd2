#!/bin/bash

set -eu

if [ $# -ne 0 ]; then
    echo "no arguments allowed for $(basename $0), given: $@" >&2
    exit 64
fi

bindir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
rootdir="$( cd $bindir/.. && pwd )"

. $bindir/_docker.sh
. $bindir/_tag.sh

dockerfile=$rootdir/web/Dockerfile

validate_go_deps_tag $dockerfile

(
    $bindir/docker-build-base
    $bindir/docker-build-go-deps
) >/dev/null

tag="$(head_root_tag)"
docker_build web $tag $dockerfile \
  --build-arg "LINKERD_VERSION=$tag" \
  --build-arg "RUNTIME_IMAGE=$(docker_repo base):$(base_version)" \
  --build-arg "GOARCH=${DOCKER_BUILD_ARCH:-amd64}"
