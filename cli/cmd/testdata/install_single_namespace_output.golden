        - containerPort: 9996
          name: admin-http
        readinessProbe:
          failureThreshold: 7
          httpGet:
            path: /ready
            port: 9996
        resources: {}
        securityContext:
          runAsUser: 2103
      - args:
        - tap
        - -controller-namespace=Namespace
        - -single-namespace=true
        - -log-level=ControllerLogLevel
        image: ControllerImage
        imagePullPolicy: ImagePullPolicy
        livenessProbe:
          httpGet:
            path: /ping
            port: 9998
          initialDelaySeconds: 10
        name: tap
        ports:
        - containerPort: 8088
